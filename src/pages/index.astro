---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Features from '../components/Features.astro';
import Stats from '../components/Stats.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="F1 Racing Championship - O Melhor Jogo de Corrida">
  <div class="racing-line"></div>
  <Hero />
  <Features />
  <Stats />
  <Footer />
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    document.addEventListener('mousemove', (e) => {
      const hero = document.querySelector('.hero');
      if (!hero) return;
      
      const x = e.clientX / window.innerWidth;
      const y = e.clientY / window.innerHeight;
      
      hero.style.background = `
        radial-gradient(circle at ${x * 100}% ${y * 100}%, rgba(255, 0, 0, 0.3) 0%, transparent 50%),
        radial-gradient(circle at ${(1-x) * 100}% ${(1-y) * 100}%, rgba(0, 100, 255, 0.2) 0%, transparent 50%),
        linear-gradient(135deg, #000 0%, #1a1a1a 100%)
      `;
    });
  });
</script>
